<!DOCTYPE html>
 <html>
 	<head>
 		<meta charset="utf-8">
 		<meta http-equiv="X-UA-Compatible" content="IE=edge">
 		<title>Add New Snip!</title>
 		<meta name="description" content=" " />
 		<meta name="author" content=" " />
 		<meta name="HandheldFriendly" content="true" />
 		<meta name="MobileOptimized" content="320" />
 		<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="stylesheet" type="text/css" href="/style.css">
 	</head>
 	<body>
    <div class="container" style="margin-top: 2rem">
      <div class="row">
        <div class="col">
          <h1>Add a Snippet!</h1>
          <form method="POST" action="/addasnip/">
            <div class="form-group{{#errors.title}} has-danger{{/errors.title}}">
              <label class="form-control-label" for="title-input">Title:</label><br>
              <input type="text" id="title-input" name="title" class="form-control" value="{{title}}" />
              {{#errors.title}}
                <div class="form-control-feedback">{{msg}}</div>
              {{/errors.title}}
            </div><br>
            <div class="form-group{{#errors.codesnippet}} has-danger{{/errors.codesnippet}}">
              <label class="form-control-label" for="codesnippet-input">Snippet Body:</label><br>
              <textarea type="textarea" id="codesnippet-input" name="codesnippet" class="form-control" value="{{codesnippet}}" /></textarea>
              {{#errors.codesnippet}}
                <div class="form-control-feedback">{{msg}}</div>
              {{/errors.codesnippet}}
            </div><br>
            <div class="form-group{{#errors.notes}} has-danger{{/errors.notes}}"><br>
              <label class="form-control-label" for="notes-input">Notes:</label><br>
              <textarea type="textarea" id="notes-input" name="notes" class="form-control" value="{{notes}}" /></textarea>
            </div><br>
            <div class="form-group{{#errors.language}} has-danger{{/errors.language}}"><br>
              <label class="form-control-label" for="language-input">Language:</label><br>
              <input type="text" id="language-input" name="language" class="form-control" value="{{language}}" />
              {{#errors.language}}
                <div class="form-control-feedback">{{msg}}</div>
              {{/errors.language}}
            </div><br>
            <div class="form-group{{#errors.privacy}} has-danger{{/errors.privacy}}"><br>
              <label class="form-control-label" for="privacy-select">Privacy:</label><br>
              <select id="privacy-select" name="privacy">
                <option value="public">Public</option>
                <option value="friends">Only Friends</option>
                <option value="private">Private</option>
              </select>
            </div><br>
            <div class="form-group{{#errors.tags}} has-danger{{/errors.tags}}"><br>
              <label class="form-control-label" for="tags-input">tags:</label><br>
              <input pattern="^[a-zA-Z,]*$" type="text" id="tags-input" name="tags" class="form-control" value="{{tags}}" />
              <!-- <button id="addatagtothenewsnippet">Add Tag</button> -->
            </div><br>
            <button type="submit" class="btn btn-primary">Add a Snip!</button>
          </form>
        </div>
      </div>
    </div>
 	  <script type="text/javascript" src="main.js"></script>
 	</body>
 </html>
